<%= render "shared/navbar" %>
<div class="container mb-3">
  <h2 class="m-4"><%= @offer.title %></h2>
  <div class="row">
    <div class="col-12 col-lg-6">
      <div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
        <div class="carousel-inner">
          <div class="carousel-item active">
            <%= cl_image_tag @offer.photos.first.key, height: 300, width: 400, class:"d-block w-100" %>
          </div>
          <div class="carousel-item">
            <%= cl_image_tag @offer.photos.last.key, height: 300, width: 400, class:"d-block w-100" %>
          </div>
          <div class="carousel-item">
            <%= cl_image_tag @offer.photos.first.key, height: 300, width: 400, class:"d-block w-100" %>
          </div>
          <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
          </a>
          <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
          </a>
        </div>
      </div>
<!--       <div class="carousel my-2"><%#= cl_image_tag @offer.photos.first.key, height: 300, width: 400, crop: :fill %>
      </div> -->
    </div>
    <div class="col-12 col-lg-6">
      <div class="d-flex flex-column mt-5">
        <div class="p-2"><i class="fas fa-search"></i></i> <%= @offer.category %></div>
        <div class="p-2"><i class="fas fa-map-marker-alt"></i> <%= @offer.address %></div>
        <div class="p-2"><i class="fas fa-users"></i> <%= @offer.capacity %></div>
        <div class="p-2"><i class="fas fa-euro-sign"></i> <%= @offer.price %></div>
      </div>
    </div>
  </div>
  <div class="container col-9 mt-4">
    <p><%= @offer.description %></p>
    <%= link_to "Book this visit", new_offer_booking_path(@offer), class:"btn btn-ghost" %>
  </div>
  <div class="back-link mt-4">
    <%= link_to "Back to all offers", offers_path %>
  </div>

  <hr>
  <h3>Reviews</h3>

  <p>⭐⭐⭐⭐⭐ - Collection impressionante ! Hôte passionné, bref, un must see.</p>

  <ul class="list-group">
    <% @offer.reviews.each do |review| %>
      <li class="list-group-item"><%= review.rating %>⭐ - <%= review.content %></li>
    <% end %>
  </ul>
</div>
